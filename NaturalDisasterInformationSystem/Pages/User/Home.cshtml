            // Hàm để hiển thị markers theo lựa chọn
            function displayMarkers(filter = "", search = "", showHighestId = false) {
                disasterLayer.clearLayers(); // Xóa tất cả marker hiện tại
                if (dis && dis.length > 0) {

                     let maxId = Math.max(...dis.map(d => d.id)); 
