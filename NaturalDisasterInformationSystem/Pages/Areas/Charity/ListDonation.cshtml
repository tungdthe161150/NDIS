                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>@donation.Revenue</td>
                                        }
                                        @if (donation.Expenditure == 0)
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>@donation.Expenditure</td>
                                        }
                                        <td>@donation.Cam?.CampaignName</td>
