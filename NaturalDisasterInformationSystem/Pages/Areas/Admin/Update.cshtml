@page
@using NaturalDisasterInformationSystem.Models
@model NaturalDisasterInformationSystem.Pages.Areas.Admin.UpdateModel
@{
    ViewData["Title"] = "Management Account";
    Layout = "~/Pages/Areas/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container my-5">
    <div class="page-inner">
        <!-- Header -->
        <div class="page-header">
            <h3 class="fw-bold mb-3">Cập nhật thông tin tài khoản</h3>
            <ul class="breadcrumbs mb-3 d-flex">
                <li class="nav-home">
                    <a asp-page="./List" class="btn btn-link text-decoration-none">
                        <i class="icon-home"></i> Quay lại
                    </a>
                </li>
            </ul>
        </div>

        <!-- Form cập nhật -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="card-title mb-0">Thông tin chi tiết tài khoản</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <!-- UserId (Readonly) -->
                            <div class="mb-3"hidden>
                                <label for="UserId" class="form-label">ID Tài khoản</label>
                                <input type="text" class="form-control" asp-for="User.UserId" readonly />
                            </div>

                            <!-- Username -->
                            <div class="mb-3">
                                <label for="Username" class="form-label">Tên tài khoản</label>
                                <input type="text" class="form-control" asp-for="User.Username" readonly />
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" asp-for="User.Email" readonly />
                            </div>

                            <div class="mb-3">
                                <label for="PasswordHash" class="form-label">Mật khẩu</label>
                                <input type="text" class="form-control" value="***" readonly />
                                <input type="hidden" asp-for="User.PasswordHash" />
                            </div>

                            <!-- Full Name -->
                            <div class="mb-3">
                                <label for="FullName" class="form-label">Họ tên</label>
                                <input type="text" class="form-control" asp-for="User.FullName" readonly />
                            </div>

                            <!-- Phone Number -->
                            <div class="mb-3">
                                <label for="PhoneNumber" class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" asp-for="User.PhoneNumber" readonly />
                            </div>

                            <!-- Role -->
                            <div class="mb-3">
                                <label for="RoleId" class="form-label">Vai trò</label>
                                <select id="RoleId" asp-for="User.RoleId" class="form-select">
@*                                     <option value="1" selected="@(Model.User.RoleId == 1 ? "selected" : "")">Admin</option>
 *@                                    <option value="2" >Charity</option>
                                    <option value="3" >User</option>
                                </select>
                            </div>

                            <!-- Active -->
                            <div class="mb-3">
                                <label for="Active" class="form-label">Trạng thái</label>
                                <select class="form-control" asp-for="User.Active">
                                    <option value="true">Đang hoạt động</option>
                                    <option value="false">Cấm</option>
                                </select>
                            </div>


                            <!-- CreatedAt (Readonly) -->
                            <div class="mb-3">
                                <label for="CreatedAt" class="form-label">Ngày tạo</label>
                                <input type="text" class="form-control" asp-for="User.CreatedAt" readonly />
                            </div>

                            <!-- Buttons -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-success px-5">Cập nhật</button>
                                <a asp-page="./List" class="btn btn-secondary px-5">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Import thư viện SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Hiển thị thông báo nếu có TempData -->
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: '@TempData["SuccessMessage"]',
                timer: 3000,
                showConfirmButton: false
            });
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi!',
                text: '@TempData["ErrorMessage"]',
                timer: 3000,
                showConfirmButton: false
            });
        </script>
    }
}

