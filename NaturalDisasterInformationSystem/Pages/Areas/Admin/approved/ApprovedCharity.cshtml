@page
@model NaturalDisasterInformationSystem.Pages.Areas.Admin.approved.ApprovedCharityModel
@{
    Layout = "~/Pages/Areas/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Danh sách tổ chức</h3>

            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"></h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên Tổ Chức</th>
                                        <th>Mô Tả</th>
                                        <th>Website</th>
                                        <th>Email Liên Hệ</th>
                                        <th>Số Điện Thoại</th>
                                        <th>Trạng Thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 1; // Initialize the counter for STT
                                    }
                                    @foreach (var charity in Model.ListCharity)
                                    {
                                        <tr>
                                            <td>@stt</td> <!-- Display STT and increment it -->
                                            <td>@charity.CharityName</td>
                                            <td>@charity.Description</td>
                                            <td>@charity.Website</td>
                                            <td>@charity.ContactEmail</td>
                                            <td>@charity.PhoneNumber</td>
                                            <td>
                                                @if (charity.Reliability == true)
                                                {
                                                    <span style="color: green;">Phê duyệt</span>
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Đang chờ phê duyệt</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-page="/Areas/Admin/Approved/DetailApprovedCharity" asp-route-dac_id="@charity.CharityId">
                                                    <span class="sub-item">Chi tiết</span>
                                                </a>
                                            </td>
                                        </tr>
                                        stt++; // Increment the counter for the next row
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

